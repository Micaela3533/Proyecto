@using Proyecto.Models;
<!doctype html>
<html lang="en">
<head>
    <title>@ViewBag.Titulo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" style="border-radius: 10px; ">
            <div class="carousel-item active">
                <img src="@ViewBag.lista[0].Imagen" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/img/endgamep.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/img/endgamep.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container2">
        <div class="row">
            @foreach (Pelicula peli in ViewBag.Peliculas)
            {
                <div class="col-3">
                    <a href="@Url.Action("DetallePelicula", "Home",new { Id=peli.Id})" style="text-decoration:none;">
                        <div class="card genero" style="background:url(@peli.Imagen); background-size: cover;"></div>
                    </a>
                </div>
            }
        </div>
    </div>

    @*@foreach (Genero g in ViewBag.Generos)
        {
        <a href="@Url.Action("Genero", "Home", new { idGenero = g.Id })" style="text-decoration:none;">
            <div id="@(g.Id + "card")" class="card genero" loop style="background:url(@g.Gif); background-size: cover;" )">
                <p>@g.Nombre</p>

            </div>
        </a>

        }*@

    <style>


        html, body {
            padding: 0;
        }

        .carousel-item {
            height: 430px;
        }

        .container2 {
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 100%;
            height: 100%;
            margin-top: 50px;
        }

        .card {
            display: flex;
            justify-content: center;
            height: 174px;
            width: 100%;
            background-image: linear-gradient(rgb(58, 60, 74), rgb(36, 38, 50));
            box-shadow: rgba(0, 0, 0, 0.69) 0px 26px 30px -10px, rgba(0, 0, 0, 0.73) 0px 16px 10px -10px;
            border-radius: 5px;
            margin-bottom: 10px;
            margin-top: 10px;
            border: 1px solid #3e404c;
            cursor: pointer;
            transition: all 250ms cubic-bezier(0.25, 0.46, 0.45, 0.94) 0s;
        }

        .genero {
            background-size: cover;
        }


            .genero p {
                color: #fff;
                font-size: 27px;
                margin: 0;
                padding: 0;
                position: relative;
                left: 50%;
                top: 0;
                transform: translateX(-50%);
            }


            .genero:hover {
                background: url('https://media.giphy.com/media/eZcCIyfkF8wIx0tgfG/giphy.gif');
                background-size: cover;
                border: 1px solid white;
                transform: scale(1.05);
            }
    </style>
</body>
</html>