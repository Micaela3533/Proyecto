    <style>


        .carousel-item {
            height: 430px;
        }

        .pos {
            position: relative;
        }


        html, body {
            padding: 0;
            background-color: #000000;
        }

        .nav-link {
            text-decoration: none;
            margin: 5px;
            color: white;
            cursor: pointer;
            font-family: 'Montserrat', sans-serif;
        }

            .nav-link:hover {
                font-family: 'Montserrat', sans-serif;
                color: #696969;
            }

        input {
            outline: none;
        }

            input[type=search] {
                -webkit-appearance: textfield;
                -webkit-box-sizing: content-box;
                font-family: inherit;
                font-size: 100%;
            }

            input::-webkit-search-decoration,
            input::-webkit-search-cancel-button {
                display: none;
            }


            input[type=search] {
                background: black;
                border: solid 1px #373737;
                padding: 9px 10px 9px 32px;
                width: 130px;
                -webkit-border-radius: 10em;
                -moz-border-radius: 10em;
                border-radius: 10em;
                -webkit-transition: all .5s;
                -moz-transition: all .5s;
                transition: all .5s;
                color: white;
            }

            input:-moz-placeholder {
                color: #ffffff;
            }

            input::-webkit-input-placeholder {
                color: #ffffff;
            }

        .container2 {
            display: flex;
            justify-content: center;
            width: 100%;
            height: 100%;
            margin-top: 50px;
        }

        .card {
            display: flex;
            justify-content: center;
            height: 325px;
            width: 210px;
            background-image: linear-gradient(rgb(58, 60, 74), rgb(36, 38, 50));
            box-shadow: rgba(0, 0, 0, 0.69) 0px 26px 30px -10px, rgba(0, 0, 0, 0.73) 0px 16px 10px -10px;
            border-radius: 10px;
            margin-right: 25px;
            margin-left: 25px;
            margin-top: 0;
            border: 1px solid #3e404c;
            cursor: pointer;
            transition: all 250ms cubic-bezier(0.25, 0.46, 0.45, 0.94) 0s;
        }

        .title {
            height: 160px;
            width: auto;
        }

        .genero {
            background-size: cover;
        }


            .genero p {
                color: #fff;
                font-size: 27px;
                margin: 0;
                padding: 0;
                position: absolute;
                left: 50%;
                top: 0;
                transform: translateX(-50%);
            }


            .genero:hover {
                background: url('https://media.giphy.com/media/eZcCIyfkF8wIx0tgfG/giphy.gif');
                background-size: cover;
                border: 1px solid white;
                transform: scale(1.05);
            }
    </style>

